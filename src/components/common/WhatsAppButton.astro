---
import Icon from '../ui/Icon.astro';
import { useTranslations } from '../../i18n/ui';

const t = useTranslations('es');

// Replace with your WhatsApp number
const whatsappNumber = '573001234567';
const whatsappMessage = encodeURIComponent('Hola, me gustaría obtener más información sobre DigitalCRM.');
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;
---

<a 
  href={whatsappUrl}
  class="whatsapp-button"
  target="_blank"
  rel="noopener noreferrer"
  aria-label={t('whatsapp.label')}
  data-animate="float"
>
  <span class="whatsapp-button__icon">
    <Icon name="whatsapp" size={28} />
  </span>
  <span class="whatsapp-button__pulse" aria-hidden="true"></span>
</a>

<style>
  .whatsapp-button {
    position: fixed;
    bottom: var(--space-6);
    right: var(--space-6);
    z-index: var(--z-fixed);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: #25D366;
    border-radius: 50%;
    box-shadow: 
      0 4px 12px rgba(37, 211, 102, 0.4),
      0 2px 4px rgba(0, 0, 0, 0.2);
    transition: all var(--duration-normal) var(--ease-out);
    text-decoration: none;
  }

  .whatsapp-button:hover {
    transform: scale(1.1);
    box-shadow: 
      0 6px 20px rgba(37, 211, 102, 0.5),
      0 4px 8px rgba(0, 0, 0, 0.3);
  }

  .whatsapp-button:active {
    transform: scale(1.05);
  }

  .whatsapp-button__icon {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .whatsapp-button__pulse {
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    background: #25D366;
    opacity: 0;
    animation: whatsapp-pulse 2s ease-out infinite;
  }

  @keyframes whatsapp-pulse {
    0% {
      opacity: 0.6;
      transform: scale(1);
    }
    100% {
      opacity: 0;
      transform: scale(1.4);
    }
  }

  /* Hide on very small screens or provide more space */
  @media (max-width: 400px) {
    .whatsapp-button {
      width: 54px;
      height: 54px;
      bottom: var(--space-4);
      right: var(--space-4);
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .whatsapp-button__pulse {
      animation: none;
    }
  }
</style>
