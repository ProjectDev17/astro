---
import Badge from '../components/ui/Badge.astro';
import Button from '../components/ui/Button.astro';
import { useTranslations } from '../i18n/ui';

const t = useTranslations('es');
---

<section class="hero" id="inicio" data-hero-section>
  <div class="hero__bg" aria-hidden="true">
    <div class="hero__gradient hero__gradient--1" data-parallax="0.02"></div>
    <div class="hero__gradient hero__gradient--2" data-parallax="0.03"></div>
    <div class="hero__orb hero__orb--1" data-parallax="0.05" data-animate="float"></div>
    <div class="hero__orb hero__orb--2" data-parallax="0.08" data-animate="float"></div>
    <div class="hero__orb hero__orb--3" data-parallax="0.06" data-animate="float"></div>
    <div class="hero__grid"></div>
  </div>

  <div class="hero__container container">
    <div class="hero__content">
      <div data-hero="badge">
        <Badge text={t('hero.badge')} />
      </div>

      <h1 class="hero__title" data-hero="title">
        <span class="word">{t('hero.title.line1')}</span>
        <span class="word">{t('hero.title.line2')}</span>
        <span class="word gradient-text">{t('hero.title.highlight')}</span>
      </h1>

      <p class="hero__description" data-hero="description">
        {t('hero.description')}
      </p>

      <div class="hero__cta" data-hero="cta">
        <Button href="#contacto" variant="primary" size="lg">
          {t('hero.cta.primary')}
        </Button>
        <Button href="#servicios" variant="secondary" size="lg">
          {t('hero.cta.secondary')}
        </Button>
      </div>
    </div>

    <div class="hero__visual" data-hero="visual">
      <div class="hero__visual-container" data-parallax-container>
        <!-- Abstract geometric shapes -->
        <div class="hero__shape hero__shape--main" data-parallax="0.04">
          <div class="hero__shape-inner"></div>
          <div class="hero__shape-ring hero__shape-ring--1" data-parallax="0.06"></div>
          <div class="hero__shape-ring hero__shape-ring--2" data-parallax="0.08"></div>
          <div class="hero__shape-ring hero__shape-ring--3" data-parallax="0.1"></div>
        </div>
        
        <!-- Floating elements -->
        <div class="hero__particle hero__particle--1" data-parallax="0.12" data-animate="float"></div>
        <div class="hero__particle hero__particle--2" data-parallax="0.15" data-animate="float"></div>
        <div class="hero__particle hero__particle--3" data-parallax="0.1" data-animate="float"></div>
        <div class="hero__particle hero__particle--4" data-parallax="0.18" data-animate="float"></div>
        
        <!-- Cursor glow effect -->
        <div class="hero__cursor-glow" data-cursor-glow></div>
        
        <!-- Data flow lines -->
        <svg class="hero__lines" viewBox="0 0 400 400" aria-hidden="true" data-parallax="0.02">
          <defs>
            <linearGradient id="lineGradient" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#00d4ff;stop-opacity:0.8" />
              <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:0.3" />
            </linearGradient>
          </defs>
          <path class="hero__line hero__line--1" d="M50,200 Q150,100 200,200 T350,200" stroke="url(#lineGradient)" fill="none" stroke-width="1"/>
          <path class="hero__line hero__line--2" d="M50,180 Q150,280 200,180 T350,180" stroke="url(#lineGradient)" fill="none" stroke-width="1"/>
          <path class="hero__line hero__line--3" d="M50,220 Q150,120 200,220 T350,220" stroke="url(#lineGradient)" fill="none" stroke-width="1"/>
        </svg>
      </div>
    </div>
  </div>

  <div class="hero__scroll" aria-hidden="true">
    <div class="hero__scroll-indicator"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 100px;
    padding-bottom: var(--space-16);
    overflow: hidden;
  }

  /* Background Effects */
  .hero__bg {
    position: absolute;
    inset: 0;
    z-index: -1;
    overflow: hidden;
  }

  .hero__gradient {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.4;
    transition: transform 0.3s ease-out;
  }

  .hero__gradient--1 {
    top: -30%;
    right: -10%;
    width: 60%;
    height: 60%;
    background: radial-gradient(circle, rgba(0, 212, 255, 0.3) 0%, transparent 70%);
    animation: pulse-slow 8s ease-in-out infinite;
  }

  .hero__gradient--2 {
    bottom: -20%;
    left: -10%;
    width: 50%;
    height: 50%;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.25) 0%, transparent 70%);
    animation: pulse-slow 10s ease-in-out infinite reverse;
  }

  .hero__orb {
    position: absolute;
    border-radius: 50%;
    background: var(--color-accent-gradient);
    opacity: 0.1;
    transition: transform 0.15s ease-out;
  }

  .hero__orb--1 {
    top: 20%;
    left: 15%;
    width: 100px;
    height: 100px;
  }

  .hero__orb--2 {
    top: 60%;
    right: 20%;
    width: 60px;
    height: 60px;
    animation-delay: -2s;
  }

  .hero__orb--3 {
    bottom: 20%;
    left: 40%;
    width: 40px;
    height: 40px;
    animation-delay: -4s;
  }

  .hero__grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
  }

  @keyframes pulse-slow {
    0%, 100% {
      transform: scale(1);
      opacity: 0.4;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.5;
    }
  }

  /* Container */
  .hero__container {
    display: grid;
    gap: var(--space-12);
    align-items: center;
    width: 100%;
  }

  /* Content */
  .hero__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    text-align: center;
  }

  .hero__title {
    font-size: var(--text-5xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
  }

  .hero__title .word {
    display: block;
  }

  .hero__description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 560px;
    margin-inline: auto;
    line-height: var(--leading-relaxed);
  }

  .hero__cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    justify-content: center;
    margin-top: var(--space-4);
  }

  /* Visual Element */
  .hero__visual {
    display: none;
    justify-content: center;
    align-items: center;
  }

  .hero__visual-container {
    position: relative;
    width: 100%;
    max-width: 500px;
    aspect-ratio: 1;
  }

  /* Cursor Glow Effect */
  .hero__cursor-glow {
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(0, 212, 255, 0.15) 0%, transparent 70%);
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease-out;
    transform: translate(-50%, -50%);
    z-index: 0;
  }

  .hero__visual-container:hover .hero__cursor-glow {
    opacity: 1;
  }

  .hero__shape {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    transition: transform 0.15s ease-out;
  }

  .hero__shape-inner {
    position: absolute;
    inset: 0;
    background: var(--color-accent-gradient);
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    opacity: 0.2;
    animation: morph 8s ease-in-out infinite;
  }

  .hero__shape-ring {
    position: absolute;
    border: 1px solid;
    border-radius: 50%;
    animation: rotate-slow linear infinite;
    transition: transform 0.2s ease-out;
  }

  .hero__shape-ring--1 {
    inset: -20%;
    border-color: rgba(0, 212, 255, 0.3);
    animation-duration: 20s;
  }

  .hero__shape-ring--2 {
    inset: -40%;
    border-color: rgba(139, 92, 246, 0.2);
    animation-duration: 30s;
    animation-direction: reverse;
  }

  .hero__shape-ring--3 {
    inset: -60%;
    border-color: rgba(0, 212, 255, 0.1);
    animation-duration: 40s;
  }

  @keyframes morph {
    0%, 100% {
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }
    25% {
      border-radius: 58% 42% 75% 25% / 76% 46% 54% 24%;
    }
    50% {
      border-radius: 50% 50% 33% 67% / 55% 27% 73% 45%;
    }
    75% {
      border-radius: 33% 67% 58% 42% / 63% 68% 32% 37%;
    }
  }

  @keyframes rotate-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .hero__particle {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--color-accent-cyan);
    border-radius: 50%;
    box-shadow: 0 0 20px var(--color-accent-cyan);
    transition: transform 0.1s ease-out;
  }

  .hero__particle--1 { top: 20%; left: 20%; }
  .hero__particle--2 { top: 30%; right: 25%; animation-delay: -1s; }
  .hero__particle--3 { bottom: 35%; left: 30%; animation-delay: -2s; }
  .hero__particle--4 { bottom: 20%; right: 20%; animation-delay: -3s; }

  .hero__lines {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    transition: transform 0.2s ease-out;
  }

  .hero__line {
    stroke-dasharray: 400;
    stroke-dashoffset: 400;
    animation: draw-line 3s ease-out forwards infinite;
  }

  .hero__line--1 { animation-delay: 0s; }
  .hero__line--2 { animation-delay: 0.5s; }
  .hero__line--3 { animation-delay: 1s; }

  @keyframes draw-line {
    0% {
      stroke-dashoffset: 400;
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      stroke-dashoffset: 0;
      opacity: 0;
    }
  }

  /* Scroll Indicator */
  .hero__scroll {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
  }

  .hero__scroll-indicator {
    width: 24px;
    height: 40px;
    border: 2px solid var(--color-border);
    border-radius: 12px;
    position: relative;
  }

  .hero__scroll-indicator::after {
    content: '';
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: var(--color-accent-cyan);
    border-radius: 2px;
    animation: scroll-bounce 1.5s ease-in-out infinite;
  }

  @keyframes scroll-bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateX(-50%) translateY(12px);
      opacity: 0.3;
    }
  }

  /* Responsive */
  @media (min-width: 768px) {
    .hero__content {
      text-align: left;
    }

    .hero__title {
      font-size: var(--text-6xl);
    }

    .hero__description {
      margin-inline: 0;
    }

    .hero__cta {
      justify-content: flex-start;
    }

    .hero__visual {
      display: flex;
    }
  }

  @media (min-width: 1024px) {
    .hero__container {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-16);
    }

    .hero__shape {
      width: 280px;
      height: 280px;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .hero__gradient,
    .hero__shape-inner,
    .hero__shape-ring,
    .hero__line,
    .hero__scroll-indicator::after {
      animation: none;
    }
    
    [data-parallax] {
      transition: none !important;
    }
  }
</style>

<script>
  // Mouse parallax interaction for Hero section only
  const heroSection = document.querySelector('[data-hero-section]');
  const parallaxElements = heroSection?.querySelectorAll('[data-parallax]');
  const cursorGlow = heroSection?.querySelector('[data-cursor-glow]');
  const visualContainer = heroSection?.querySelector('[data-parallax-container]');
  
  if (heroSection && parallaxElements && parallaxElements.length > 0) {
    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReducedMotion) {
      // Skip parallax for accessibility
    } else {
      let mouseX = 0;
      let mouseY = 0;
      let currentX = 0;
      let currentY = 0;
      let animationFrameId: number | null = null;
      
      // Smooth interpolation
      const lerp = (start: number, end: number, factor: number) => {
        return start + (end - start) * factor;
      };
      
      // Update element positions with smooth animation
      const updateParallax = () => {
        currentX = lerp(currentX, mouseX, 0.1);
        currentY = lerp(currentY, mouseY, 0.1);
        
        parallaxElements.forEach((element) => {
          const intensity = parseFloat((element as HTMLElement).dataset.parallax || '0.05');
          const x = currentX * intensity * 100;
          const y = currentY * intensity * 100;
          (element as HTMLElement).style.transform = `translate(${x}px, ${y}px)`;
        });
        
        animationFrameId = requestAnimationFrame(updateParallax);
      };
      
      // Track mouse position relative to hero section
      heroSection.addEventListener('mousemove', (e: Event) => {
        const event = e as MouseEvent;
        const rect = heroSection.getBoundingClientRect();
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        // Normalize mouse position from -1 to 1
        mouseX = (event.clientX - rect.left - centerX) / centerX;
        mouseY = (event.clientY - rect.top - centerY) / centerY;
        
        // Update cursor glow position
        if (cursorGlow && visualContainer) {
          const containerRect = visualContainer.getBoundingClientRect();
          const glowX = event.clientX - containerRect.left;
          const glowY = event.clientY - containerRect.top;
          (cursorGlow as HTMLElement).style.left = `${glowX}px`;
          (cursorGlow as HTMLElement).style.top = `${glowY}px`;
        }
      });
      
      // Reset when mouse leaves
      heroSection.addEventListener('mouseleave', () => {
        mouseX = 0;
        mouseY = 0;
      });
      
      // Start animation loop
      updateParallax();
      
      // Cleanup on page navigation
      document.addEventListener('astro:before-swap', () => {
        if (animationFrameId) {
          cancelAnimationFrame(animationFrameId);
        }
      });
    }
  }
</script>
