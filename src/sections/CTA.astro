---
import Button from '../components/ui/Button.astro';
import { useTranslations } from '../i18n/ui';

const t = useTranslations('es');
---

<section class="cta section" id="contacto">
  <div class="cta__bg" aria-hidden="true">
    <div class="cta__gradient cta__gradient--1"></div>
    <div class="cta__gradient cta__gradient--2"></div>
    <div class="cta__orb cta__orb--1" data-animate="float"></div>
    <div class="cta__orb cta__orb--2" data-animate="float"></div>
  </div>

  <div class="cta__container container" data-animate="section">
    <div class="cta__content">
      <h2 class="cta__title">{t('cta.title')}</h2>
      <p class="cta__description">{t('cta.description')}</p>
      
      <div class="cta__actions">
        <Button href="#contacto" variant="primary" size="lg">
          {t('cta.button')}
        </Button>
      </div>

      <p class="cta__note">{t('cta.note')}</p>
    </div>
  </div>
</section>

<style>
  .cta {
    position: relative;
    background: var(--color-bg-primary);
    overflow: hidden;
  }

  .cta__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .cta__gradient {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
    opacity: 0.5;
  }

  .cta__gradient--1 {
    top: -50%;
    left: -20%;
    width: 80%;
    height: 100%;
    background: radial-gradient(circle, rgba(0, 212, 255, 0.2) 0%, transparent 70%);
  }

  .cta__gradient--2 {
    bottom: -50%;
    right: -20%;
    width: 80%;
    height: 100%;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.2) 0%, transparent 70%);
  }

  .cta__orb {
    position: absolute;
    border-radius: 50%;
    background: var(--color-accent-gradient);
    opacity: 0.1;
  }

  .cta__orb--1 {
    top: 20%;
    right: 10%;
    width: 80px;
    height: 80px;
  }

  .cta__orb--2 {
    bottom: 20%;
    left: 10%;
    width: 60px;
    height: 60px;
    animation-delay: -2s;
  }

  .cta__container {
    position: relative;
    z-index: 1;
  }

  .cta__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-6);
    max-width: 700px;
    margin-inline: auto;
    padding: var(--space-12);
    background: var(--color-glass);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2xl);
  }

  .cta__title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
  }

  .cta__description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  .cta__actions {
    margin-top: var(--space-4);
  }

  .cta__note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  @media (min-width: 768px) {
    .cta__title {
      font-size: var(--text-4xl);
    }

    .cta__content {
      padding: var(--space-16);
    }
  }
</style>
